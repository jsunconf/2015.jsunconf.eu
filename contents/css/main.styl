@import 'nib'
@import '../bower_components/normalize.styl/normalize.styl'
@import '../bower_components/stackenblochen/stackenblochen.styl'

$violet = #92137F;
$red-violet = #8f1332;
$grey = #aab2bd
$grey-very-light = #f5f7fa
$grey-light = #e6e9ed
$grey-dark = #434a54

*, *:before, *:after
  box-sizing: border-box

html, body
  height: 100%
  color: $grey-dark
  font-family: 'Merriweather', serif
  font-size: 100%
  line-height: 1.333
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  -ms-content-zooming: none

figure
  margin: 0
  img
    display: block

p
  text-indent: 1em

a
  text-decoration: none
  color: $red-violet
  &:hover, &:focus
    text-decoration: underline

h1
  text-align: center
  margin: 1.5em 15%
  line-height: 1.666
  border-bottom: 1px solid $grey-light
  font-family: Lato, sans-serif
  font-weight: 300
  font-style: normal

small
  color: $grey
  font-size: .7em

img
  vertical-align: bottom

hr
  font-size: 1rem
  margin: 0
  height: 1px
  border: none
  border-top: 1px solid $grey-light

.header
  font-size: 1rem
  background: $violet url('/images/header.jpg') center center no-repeat
  background-size: cover
  text-align: center
  color: white
  &__logo
    border: 1px solid white
    margin: 2em 0
    transition: all .25s
    &:hover, &:focus
      transform: rotate(20deg)
      border-radius: 20%
    &__background
      fill: transparent !important
  &__headline
    font-size: 2em
    margin: 2em 0
    vertical-align: middle

.menu
  font-size: 1rem
  list-style: none
  margin: 2em 0
  &__item
    display: inline-block
    &__link
      font-size: 1.25em
      display: inline-block
      color: white
      font-weight: bold
      padding: .25em .25em .15em .25em
      margin: .25em .25em .35em .25em
      border-bottom: 2px solid transparent
      border-top-right-radius: 4px
      border-top-left-radius: 4px
      transition: all .25s
      &:hover, &:focus
        background-color: rgba(0, 0, 0, .1)
        text-decoration: none
        border-bottom-color: white

.intro-title
  border-bottom: none
  font-family: 'Merriweather', serif
  font-weight: 700
  font-style: italic

.news
  &__more
    text-align: center
    margin-top: 1em
    margin-bottom: 1em

.sponsoring
  &__image
    margin-top: 2em

.about
  font-size: 1rem
  &__link
    display: inline-block
    max-width: 100%
    color: $grey-dark
    background: $grey-very-light
    &:hover, &:focus
      .about__link__image
        opacity: .9
        transform: scale(1.05)
    &__image
      transition: opacity .3s, transform .3s
      &__caption
        padding: .5em

.footer
  font-size: 1rem
  line-height: 2em
  margin-top: 2em
  padding: 2em 0
  color: white
  background: $grey-dark
  a
    color: white
  &__links
    text-align: right